{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@vectorseek/platform/*": ["apps/platform/src/app/*"],
      "@vectorseek/data-access/*": ["libs/data-access/src/*"],
      "@vectorseek/ui/*": ["libs/ui/*"]
    },
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "types": []
  }
}
